<div class="container p-3">
  <h2 class="my-3">
    Cargar producto:
  </h2>
  <form id="prodForm" class="p-2">
    <div class="mb-3">
      <label for="productTitle" class="form-label">Nombre del Producto</label>
      <input required type="text" class="form-control" id="productTitle" name="productTitle"/>
    </div>

    <div class="mb-3">
      <label for="productPrice" class="form-label">Precio</label>
      <input required type="number" class="form-control" id="productPrice" name="productPrice"/>
    </div>
    <div class="mb-3">
      <label for="productImgUrl" class="form-label"> URL de la imagen </label>
      <input required type="url" class="form-control" id="productImgUrl" name="productImgUrl"/>
    </div>
    <button type="submit" class="btn btn-primary">
      Upload
    </button>
  </form>
</div>